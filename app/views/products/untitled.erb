      <label><input name= "check[category1_name]" type= "checkbox" value="category1_name" <%= "checked=checked" if @check.present? && @check[:category1_name] == "category1_name" %>/>一级分类</label>
         <!-- html搜索表单  -->
      <select  name="where[category1_name]" class= "form-control " style='margin-top: 5px;'>
        <option value>一级分类</option>
        <% Product.select("category1_name").group("category1_name").each do |i| %>
          <option value="<%= i.category1_name %>" <%= "selected=selected" if @where.present? && @where[:category1_name] == i. category1_name %>><%= i.category1_name %></option>
        <% end %>
      </select> 
      
      <!-- 复选框 -->
      <select name="where[category2_name]" class= "form-control" style='margin-top: 50px;'>
        <option value>二级分类</option>
      <!-- 搜索表单-->
      <% Product.select("category2_name").group("category2_name").each do |e| %>
          <option value="<%= e.category2_name %>" <%= "selected=selected" if @where.present? && @where[:category2_name] == e. category2_name %>><%= e.category2_name %></option>
        <% end %>
      </select>

      <select name="where[price]" class= "form-control" style='margin-top: 50px;'>
