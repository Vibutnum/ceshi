        <option value="5000,10000" <%= "selected=selected" if @where.present? && @where[:price] == "5000,10000" %>>5千-1万</option>
        <option value="10000,50000" <%= "selected=selected" if @where.present? && @where[:price] == "10000,50000" %>>1万-5万</option>
        <option value="50000,100000" <%= "selected=selected" if @where.present? && @where[:price] == "50000,100000" %>>5万-10万</option>
        <option value="100000,10000000" <%= "selected=selected" if @where.present? && @where[:price] == "100000,10000000" %>>10万以上</option>
      </select>

